                                android:id="@+id/pre06C"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{tests.pre06.equals(`3`)}"
                                android:onClick="@{()->tests.setPre06(`3`)}"
