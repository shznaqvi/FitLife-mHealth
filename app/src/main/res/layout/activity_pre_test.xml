                                android:id="@+id/pre06B"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{tests.pre06.equals(`2`)}"
                                android:onClick="@{()->tests.setPre06(`2`)}"
                                android:text="@string/a06B" />

